rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /Formulario/{document} {
      allow create: if request.auth.uid == request.resource.data.Nome;
      allow read: if request.auth.uid == resource.data.Nome;
      allow write: if false;
      allow delete: if false;
    }

    match /users/{document} {
      allow create: if request.auth.uid == request.resource.data.email;
      allow read: if request.auth.uid == resource.data.email;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /users/{parent}/historico/{document} {
      allow create: if request.auth.uid == request.resource.data.email;
      allow read: if request.auth.uid == parent;
      allow write: if request.auth.uid == parent;
      allow delete: if request.auth.uid == parent;
    }

    match /users/{parent}/form1/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/form1/{document} {
      allow read: if true;
    }

  }
}
